@model List<Menu>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="text-primary">Available Menus</h2>
            <p class="text-muted">Select a menu to see its details and contents.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-hover text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@obj.Name</strong>
                                    </td>
                                    <td>
                                        <a asp-action="CheckMenu" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-search"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-muted">No menus available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
