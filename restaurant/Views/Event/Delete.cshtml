@model restaurant.Models.Event

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="text-danger">Delete Event</h2>
            <p class="text-muted">Are you sure you want to delete this event?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 rounded shadow-sm bg-light">
                <h4 class="text-primary">Event Name:</h4>
                <p>@Model.Name</p>
                <h4 class="text-primary">Description:</h4>
                <p>@Model.Description</p>
                <h4 class="text-primary">Event Date:</h4>
                <p>@Model.EventDate.ToString("dd MMM yyyy hh:mm tt")</p>
                <h4 class="text-primary">Menu Name:</h4>
                <p>@Model.Menu.Name</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
