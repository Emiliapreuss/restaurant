@model restaurant.Models.Event

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-primary">@Model.Name</h1>
            <p class="text-muted">Details of the event</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <p><strong>Date:</strong> @Model.EventDate.ToString("dd MMM yyyy hh:mm tt")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Menu:</strong> @Model.Menu.Name</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-primary border-bottom pb-2">Menu Details</h3>
            @foreach (var category in ViewBag.GroupedDishes)
            {
                <div class="mb-4">
                    <h4 class="text-secondary">@category.Key</h4>
                    <ul class="list-group">
                        @foreach (var dish in category.Value)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>@dish.Name</strong>
                                    </span>
                                    <span class="badge bg-primary rounded-pill fs-6">@dish.Price.ToString("C")</span>
                                </div>
                                <p class="text-muted mt-1 mb-0 small">@dish.Description</p>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-return-left"></i> Back to Events
            </a>
        </div>
    </div>
</div>
