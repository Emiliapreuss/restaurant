@model restaurant.Models.Event

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="text-primary">Add New Event</h2>
            <p class="text-muted">Fill out the form below to create a new event.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label text-primary">Event Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label text-primary">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label text-primary">Event Date</label>
                    <input asp-for="EventDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-primary">Menu</label>
                    <select asp-for="MenuId" class="form-control" asp-items="@(new SelectList(ViewBag.Menus, "Id", "Name"))"></select>
                    <span asp-validation-for="MenuId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add Event
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
